= form.association :site, collection: MomentumCms::Site.all, prompt: 'Choose a Site', label_method: :label, value_method: :id, include_blank: false
= form.input :label
= form.input :identifier
= form.input :value, as: :text, input_html: { rows: 10, data: {editor: 'html'}}
= form.submit class: 'btn btn-success btn-xs'
= link_to 'Back', cms_admin_site_snippets_path(@current_momentum_cms_site), class: 'btn btn-primary btn-xs'