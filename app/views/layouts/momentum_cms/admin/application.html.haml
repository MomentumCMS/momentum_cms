!!!
%html{:lang => I18n.locale}
  %head
    %meta{'http-equiv' => 'Content-type', :content => 'text/html; charset=utf-8'}
    
    = stylesheet_link_tag 'momentum_cms/admin/application'
    = javascript_include_tag 'momentum_cms/admin/application'
    = csrf_meta_tag
    
    = yield :head
    
  %body#momentum_cms{:class => "controller-#{params[:controller].to_slug} action-#{params[:action].to_slug}"}
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Momentum CMS', momentum_cms_admin_root_path, class: 'navbar-brand'
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to 'Dashboard', momentum_cms_admin_root_path
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Site
                %b.caret
              %ul.dropdown-menu
                - @momentum_cms_sites.each do |momentum_cms_site|
                  %li
                    %a{href: "#"}= momentum_cms_site.label
                - if @momentum_cms_sites.present?
                  %li.divider
                %li.dropdown-header Manage Sites
                %li= link_to 'Manage Sites', momentum_cms_admin_sites_path
                %li= link_to 'New Site', new_momentum_cms_admin_site_path
            -#%li
            -#  %a{href: "#"} Settings
          %form.navbar-form.navbar-right
            %input.form-control{placeholder: "Search...", type: "text"}/
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          = render partial: 'momentum_cms/admin/partials/left_side_bar'
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          - flash.each do |type, message|
            .alert{:class => "alert-#{type}"}
              %button.close{:type => 'button', :class => "close", :data => {:dismiss => 'alert'}} &times;
              = message
          = yield